<configuration>
  <appender name="CLOUDWATCH" class="com.github.danielwegener.logback.aws.CloudWatchAppender">
    <logStreamName>my-app-log-stream</logStreamName>
    <logGroupName>my-app-log-group</logGroupName>
    <region>us-west-2</region>
    <awsAccessKeyId>AKIASCWGGPN7R6LTALVH</awsAccessKeyId>
    <awsSecretKey>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</awsSecretKey>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="CLOUDWATCH"/>
  </root>
</configuration>